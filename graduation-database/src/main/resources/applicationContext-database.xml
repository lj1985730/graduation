<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd"
       default-lazy-init="true">

    <!-- c3p0连接池配置 -->
    <bean id="dataSource" class="com.mchange.v2.c3p0.ComboPooledDataSource">
        <property name="driverClass" value="${db.driverClass}"/>
        <property name="jdbcUrl" value="${db.url}"/>
        <property name="user" value="${db.username}"/>
        <property name="password" value="${db.password}"/>
        <property name="maxPoolSize" value="${db.maxConnectionCount}"/>
        <property name="minPoolSize" value="${db.minConnectionCount}"/>
        <property name="initialPoolSize" value="2"/>
        <property name="maxIdleTime" value="60"/>
        <property name="checkoutTimeout" value="0"/>
        <property name="acquireIncrement" value="2"/>
        <property name="acquireRetryAttempts" value="0"/>
        <property name="acquireRetryDelay" value="1000" />
        <property name="autoCommitOnClose" value="false"/>
        <property name="preferredTestQuery" value="SELECT 1 FROM SYS_CONFIG"/>
        <property name="breakAfterAcquireFailure" value="false"/>
        <property name="idleConnectionTestPeriod" value="40"/>
        <property name="maxStatements" value="70"/>
    </bean>
</beans>