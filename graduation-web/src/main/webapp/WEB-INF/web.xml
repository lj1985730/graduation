	<!-- 标签库拦截配置 -->
	<jsp-config>
		<taglib>
			<taglib-uri>/lsTags</taglib-uri>
			<taglib-location>/WEB-INF/tags/lsTags.tld</taglib-location>
		</taglib>
	</jsp-config>

	<session-config>
		<session-timeout>30</session-timeout>
	</session-config>

</web-app>